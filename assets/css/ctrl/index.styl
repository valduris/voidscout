.attack_cooldown_wrapper {
  background #888
  border 1px solid #000
  border-radius 3px
  box-shadow 0 0 3px #333 inset
  position relative
  width 515px
}
.attack_cooldown_text {
  color #eee
  font-weight bold
  font-family Arial
  line-height 20px
  position absolute
  text-align center
  width 515px
}
.attack_cooldown {
  background #444
  border-right 1px solid #000
  box-shadow 0 0 4px #237
  height 20px
  width 100%
}
.attack_cooldown.animate {
  transition-duration 4000ms
  transition-property all
  transition-timing-function linear
}
.player_experience_bar_wrapper {
  background #888
  border 1px solid #000
  border-radius 3px
  box-shadow 0 0 3px #333 inset
  box-sizing border-box
  position relative
  width 100%
}
.player_experience_bar_text {
  color #222
  font-size 9px
  font-weight bold
  font-family Arial
  line-height 11px
  position absolute
  text-align center
  text-shadow 0 0 5px #fff
  width 800px
}
.player_experience_bar {
  background #444
  border-right 1px solid #000
  box-shadow 0 0 4px #237
  height 10px
  width 0
}
.player_experience_bar.animate {
  transition-duration 400ms
  transition-property all
  transition-timing-function linear
}
.log {
  background #888
  border 1px solid #000
  border-radius 3px
  box-shadow 0 0 3px #333 inset
  box-sizing border-box
  font-size 16px
  padding 5px
  position relative
  width 515px
  .entry {
    color white
    font-size 0.8em
    list-style none
    text-shadow 0 0 3px #000
  }
  .entry.entry_lightblue {
    color #dff2ff
  }
  .entry.entry_red {
    color #ff4444
  }
  .entry.entry_yellow {
    color yellow
  }
}

.items_view {
  list-style none
  padding 5px
  margin 0
  .item_slot {
    border 1px solid #666
    border-radius 4px
    background #f4f4f4
    cursor pointer
    display inline-block
    font-size 11px
    height 70px
    margin 5px
    overflow hidden
    text-align center
    text-transform capitalize
    width 67px
    box-shadow 0 0 10px #888 inset, 0 0 2px #dff2ff
    &:hover {
      background #fff
      box-shadow 0 0 10px #555 inset, 0 0 2px #dff2ff
    }
    p {
      margin 2px
    }
  }
}